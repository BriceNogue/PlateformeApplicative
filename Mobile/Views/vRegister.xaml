<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.Views.vRegister"
             Title="Créer un compte"
             Shell.FlyoutItemIsVisible="False"
             Shell.FlyoutBehavior="Disabled">

    <VerticalStackLayout
        Padding="25"
        Spacing="25">
        <Label 
            Text="Créer un compte"
            VerticalOptions="Center"
            HorizontalOptions="Center" />

        <Border
            HeightRequest="50">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="5"/>
            </Border.StrokeShape>
            <Entry
                x:Name="txt_name"
                Placeholder="Nom"
                Keyboard="Text"
                FontSize="18"             
                Margin="10,0,10,0"/>
        </Border>
        
        <Border
            HeightRequest="50">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="5"/>
            </Border.StrokeShape>
            <Entry
            x:Name="txt_nam"
            Placeholder="Nom"
            Keyboard="Text"
            FontSize="18"             
            Margin="10,0,10,0"/>
        </Border>

    </VerticalStackLayout>
</ContentPage>