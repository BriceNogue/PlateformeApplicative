@using Shareds.Modeles;
@using Services;
@using Microsoft.AspNetCore.Components.Forms;

@*
    public int Id { get; set; }
        public string Nom { get; set; } = string.Empty;
        public string Emplacement { get; set; } = string.Empty;
        public int Capacite { get; set; }
        public bool Status { get; set; }
        public int IdType { get; set; }
        public int IdEtablissement { get; set; }
*@

<EditForm Model="salle">
    <div class="form-group">
        <label for="nom">Nom:</label>
        <InputText id="nom" @bind-Value="salle.Nom"/>
        <ValidationMessage For="@(() => salle.nom)"/>
    </div>
    <div class="form-group">
        <label for="emplacement">Emplacement:</label>
        <InputText id="Emplacement" @bind-Value="salle.Emplacement" />
        <ValidationMessage For="@(() => salle.Emplacement)" />
    </div>
    <div class="form-group">
        <label for="capacite">Capacite:</label>
        <InputNumber id="capacite" @bind-Value="salle.Capacite" />
        <ValidationMessage For="@(() => salle.Capacite)" />
    </div>
    <div class="form-group">
        <label>Statut:</label>
        <div class="form-check">
            <InputRadio id="statutDisponible" @bind-Value="salle.Status" Value="true"  class="form-check-input"/>
            <label for="statutDisponible" class="form-check-label">Disponible</label>
        </div>
        <div class="form-check">
            <InputRadio id="statutIndisponible" @bind-Value="salle.Status" Value="true"  class="form-check-input"/>
            <label for="statutIndisponible" class="form-check-label">Indisponible</label>
        </div>
    </div>
    <div class="form-group">
        <label for="capacite">Type:</label>
        <InputNumber id="type" @bind-Value="salle.IdType" />
    </div>
</EditForm>

@code {
    [Parameter]
    public bool isNew { get; set; }

    [Parameter]
    public int id { get; set; }

    private SalleModele salle;

    protected override void OnInitialized()
    {
        if(isNew)
        {
            salle = new SalleModele();
        }
    }

}
