<Window x:Class="Desktop.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="Login" Height="760" Width="450"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="{x:Null}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        AllowsTransparency="True">

    <materialDesign:Card
        materialDesign:ElevationAssist.Elevation="Dp4"
        UniformCornerRadius="15" 
        Background="{DynamicResource MaterialDesignPaper}"
        Margin="25">

        <materialDesign:DialogHost CloseOnClickAway="True" x:Name="DialogHost">
            <StackPanel>
                <materialDesign:PopupBox 
                    HorizontalAlignment="Right" 
                    Margin="0 20 20 0"
                    PlacementMode="BottomAndAlignRightEdges"
                    StaysOpen="False"
                    Height="25">

                    <StackPanel>
                        <StackPanel
                            Margin="16 10 0 6"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                            <TextBlock 
                                VerticalAlignment="Center"
                                Text="Mode sombre"/>

                            <ToggleButton 
                                Cursor="Hand"
                                ToolTip="Activé le mode sombre"
                                Margin="12 0 8 0"
                                x:Name="themeToggle"
                                IsChecked="{Binding IsDarkTheme}"
                                Click="toggleTheme"/>
                        </StackPanel>
                        
                        <Button
                            x:Name="btn_exit"
                            ToolTip="Close Applcation"
                            Content="Exit Application"
                            Click="exitApp"/>

                    </StackPanel>
                </materialDesign:PopupBox>

                <!-- <Image Margin="0 60 0 5" Width="300" Source="./Resources/Images/logo3il.png" Height="100"/> -->

                <TextBlock
                    Margin="0 25 0 5"
                    HorizontalAlignment="Center"
                    FontSize="28"
                    FontWeight="Bold"
                    Text="Bienvenue"/>

                <TextBlock
                    Margin="0 25 0 5"
                    HorizontalAlignment="Center"
                    FontSize="17"
                    FontWeight="SemiBold"
                    Text="Connectez vous a votre compte"/>

                <TextBox
                    x:Name="txt_b_email"
                    Margin="0 50 0 0"
                    Width="300"
                    FontSize="18"
                    materialDesign:HintAssist.Hint="Email"
                    BorderThickness="2"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding email}"/>

                <PasswordBox
                    x:Name="txt_password"
                    Margin="0 20 0 0"
                    Width="300"
                    FontSize="18"
                    materialDesign:HintAssist.Hint="Mot de passe"
                    BorderThickness="2"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    Style="{StaticResource MaterialDesignOutlinedPasswordBox}"/>

                <Button
                    x:Name="loginBtn"
                    Margin="0 20 0 0"
                    Style="{StaticResource MaterialDesignFlatMidBgButton}"
                    materialDesign:ElevationAssist.Elevation="Dp1"
                    Height="53"
                    Width="300"
                    materialDesign:ButtonAssist.CornerRadius="5"
                    FontSize="18"
                    Content="SE CONNECTER"
                    Click="login"/>


            </StackPanel>
        </materialDesign:DialogHost>
    </materialDesign:Card>
</Window>
